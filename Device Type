		//command "reset"
        
		command "configure"
      fingerprint deviceId: "0x1101", inClusters: "0x72, 0x86, 0x70, 0x85, 0x8E, 0x26, 0x7A, 0x27, 0x73, 0xEF, 0x26, 0x2B"
	
    }

	// simulator metadata
